//- Sử dụng file layout chính cho page
extends ../layouts/default.pug

//- Import các mixins cần thiết
include ../mixins/profile_section.pug
include ../mixins/profile_info.pug

block content
  //- Phần thông tin chung (profile section)
  +profileSection("Triệu Mẫn", "Uploader", "01/01/2024", "../../assets/img/Boss Combat.jpg")
  
  //- Phần thông tin cá nhân
  .block-content
  //- Phần tiêu đề và icon nằm ngoài box
  .personal-info-header
      img.icon-user(src="../../assets/img/icon.png" alt="User Icon")
      h2.personal-info-title Thông tin cá nhân
  hr.personal-info-divider

  //- Box chứa thông tin cá nhân
  .personal-info-container
    +personalInfoBox(
      "man.ngotrieuman27@hcmut.edu.vn",
      "kandy_2705",
      "0123456789",
      "27/05/2004"
    )


  //- Danh sách truyện đã đăng 
  .main-layout
    .grid__column-3
      .manga-section
        .manga-section-title-header
          img.mangaicon(src="../../assets/img/mangaicon.png" alt="Manga Icon")
          h2.manga-section-title Danh sách truyện đã đăng
        hr.manga-info-divider
    

    //- Chức năng
    .grid__column-1
      .function-section
        .function-section-title-header
          img.functionicon(src="../../assets/img/Function.png" alt="Function Icon")
          h2.function-section-title Chức năng
        hr.function-info-divider
        button.function-btn 
          img.icon(src="../../assets/img/my-story-icon.png" alt="My Story Icon")
          span Truyện của tôi
        button.function-btn
          img.icon(src="../../assets/img/favorite-icon.png" alt="Favorite Icon")
          span Truyện yêu thích
        button.function-btn
          img.icon(src="../../assets/img/write-center-icon.png" alt="Write Center Icon")
          span Trung tâm viết truyện