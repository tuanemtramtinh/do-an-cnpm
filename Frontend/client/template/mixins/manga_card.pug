mixin mangaCard(title, cover, rating, chapters)
  .manga-card
    img.manga-cover(src=cover, alt="Manga Cover")
    .manga-details
      h4= title
      p Tác giả: Tên tác giả
      p Đánh giá: #{rating}
      .chapters-list
        each chapter, index in chapters
          .chapter
            span Chapter #{index + 1}: #{chapter}
